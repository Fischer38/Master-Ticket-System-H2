<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Document</title>
    <link rel="stylesheet" href="css/sign.css">
</head>
    <body>
        <main>
            <section id="signInPage">
                <h1>Sign in</h1>
                <form>
                    <label for="userForSignIn">Username</label>
                    <input id="userForSignIn" name="user" type="text" placeholder="Username">
                    <label for="passForSignIn">Password</label>
                    <input id="passForSignIn" name="pass" type="password" placeholder="Password">
                    <button>Sign in</button>
                </form>
                <p>Don't have an account? <a href="#">Sign up</a></p>
            </section>
            <section id="signUpPage" hidden>
                <h1>Sign up</h1>
                <form>
                    <label for="username">Username</label>
                    <input id="username" name="user" type="text" placeholder="Username">
                    <label for="email">Email</label>
                    <input id="email" name="email" type="email" placeholder="Email">
                    <label for="password">Password</label>
                    <input id="password" name="pass" type="password" placeholder="Password">
                    <label for="passwordRepeat">Repeat password</label>
                    <input id="passwordRepeat" name="passRepeat" type="password" placeholder="<PASSWORD>">
                    <button>Sign up</button>
                </form>
                <p>Already have an account? <a href="#">Sign in</a></p>
            </section>
        </main>
    </body>
    <script src="js/sign.js"></script>
</html>